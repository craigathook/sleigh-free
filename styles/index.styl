body
	background url('../images/background.gif')

#stageContainer
	position relative
	height 667px
	width 375px
	background #e2edfc
	border-radius 2px
	border 1px solid rgba(0,0,0,0.3);
	box-shadow 0px 10px 20px rgba(0,0,0,0.5);
	margin 50px auto 0px auto

.sleigh, .tree
	transform-origin: 50% 50%;

.tree
	img
		position relative
		top -30px
		left -20px

.score
	padding-top 15px
	font-family sans-serif
	font-size 23px
	width 375px
	text-align center

.welcome-screen, .dead-screen
	height 667px
	width 375px
	background url('../images/leather.gif')
	color gold
	text-shadow -1px -1px 2px #000000, 1px 1px 1px rgba(255,255,255,0.5)
	
	.story
		margin 30px
		padding 30px
		text-align: justify
		text-justify: inter-word
		border 1px dashed gold
		border-radius 5px
		height 545px
	p
		padding 10px 0
		font-family sans-serif
		font-size 15px
		line-height 25px
	h1
		margin-top 0
		padding 0
		text-align center
	.begin
		font-family sans-serif
		position relative
		top 30px
		width 100%
		padding 20px 0
		border-radius 4px
		font-size 20px
		margin auto
		text-align center
		border 1px solid
		
.dead-screen
	.end-score
		font-size 30px
		text-align center
		
	
	
.avalanche
	margin-left -40px
	background: -moz-linear-gradient(top,  rgba(255,255,255,0) 0%, rgba(255,255,255,1) 14%, rgba(255,255,255,1) 47%, rgba(213,213,213,1) 48%, rgba(85,85,85,0.5) 51%, rgba(0,0,0,0.48) 53%, rgba(0,0,0,0) 100%); /* FF3.6-15 */
