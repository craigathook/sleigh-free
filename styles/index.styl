body
	background url('../images/leather.gif');
	height 100%
	width 100%
	overflow hidden
	margin 0
	padding 0
	font-family sans-serif


#stageContainer
	position relative
	height 667px
	width 375px
	background #e2edfc
	border-radius 5px
	border 1px solid rgba(0,0,0,0.5);
	box-shadow 0px 10px 20px rgba(0,0,0,0.5);
	margin 50px auto 0px auto

.sleigh, .tree
	transform-origin: 50% 50%;

.tree
	img
		position relative
		top -30px
		left -20px

.score
	padding-top 15px
	font-family sans-serif
	font-size 23px
	width 100%
	text-align center

.welcome-screen, .dead-screen
	height 100%
	width 100%
	background url('../images/background.gif')
	color gold
	box-shadow inset 0 800px 200px rgba(0,0,0,0.2), inset 0 0px 200px rgba(0,0,0,0.6)
	text-shadow -1px -1px 2px #000000, 1px 1px 1px rgba(255,255,255,0.5)
	
	.story
		margin 30px
		padding 30px
		text-align: justify
		text-justify: inter-word
		//border 1px dashed gold
		border-radius 5px
		height 545px
	p
		padding 10px 0
		font-family sans-serif
		font-size 15px
		line-height 25px
	h1
		margin-top 0
		padding 0
		text-align center
	.begin
		font-family sans-serif
		position relative
		top 30px
		width 100%
		padding 20px 0
		border-radius 4px
		font-size 20px
		margin auto
		text-align center
		border 1px solid
		
.dead-screen
	.end-score
		font-size 30px
		text-align center
		
	
	
.avalanche
	margin-left -40px
	background: -moz-linear-gradient(top,  rgba(255,255,255,0) 0%, rgba(255,255,255,1) 14%, rgba(255,255,255,1) 47%, rgba(213,213,213,1) 48%, rgba(85,85,85,0.5) 51%, rgba(0,0,0,0.48) 53%, rgba(0,0,0,0) 100%); /* FF3.6-15 */
	background: -webkit-linear-gradient(top,  rgba(255,255,255,0) 0%,rgba(255,255,255,1) 14%,rgba(255,255,255,1) 47%,rgba(213,213,213,1) 48%,rgba(85,85,85,0.5) 51%,rgba(0,0,0,0.48) 53%,rgba(0,0,0,0) 100%); /* Chrome10-25,Safari5.1-6 */
	background: linear-gradient(to bottom,  rgba(255,255,255,0) 0%,rgba(255,255,255,1) 14%,rgba(255,255,255,1) 47%,rgba(213,213,213,1) 48%,rgba(85,85,85,0.5) 51%,rgba(0,0,0,0.48) 53%,rgba(0,0,0,0) 100%); /* W3C, IE10+, FF16+, Chrome26+, Opera12+, Safari7+ */
	//box-shadow -170px 600px 600px rgba(0,0,0,0.5)
	width 800px
	height 1600px

//iphone 6s
@media screen and (max-device-width : 480px)
	body
		//background: lightgreen;
		position: fixed;
		height 628px
	.welcome-screen, .dead-screen
		width 100%
		height 100%
		.story
			border 0px
			height 100%
			p
				padding 5px 0 0 0
				font-family sans-serif
				font-size 15px
				line-height 20px
	
	#stageContainer
		border-radius 0
		border 0px solid rgba(0,0,0,0.3);
		box-shadow 0px 10px 20px rgba(0,0,0,0.0);
		margin 0

